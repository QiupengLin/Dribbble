<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.qiupenglin.dribbble_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name="com.example.qiupenglin.dribbble_app.DribbboApplication"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.example.qiupenglin.dribbble_app.view.LoginActivity"
            android:windowSoftInputMode="adjustPan|adjustResize|stateHidden">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.qiupenglin.dribbble_app.view.MainActivity" />

        <activity android:name="com.example.qiupenglin.dribbble_app.view.shot_detail.ShotActivity" />
        <activity android:name="com.example.qiupenglin.dribbble_app.view.bucket_list.BucketListActivity" />
        <activity android:name="com.example.qiupenglin.dribbble_app.view.bucket_list.BucketShotListActivity" />

        <activity
            android:name="com.example.qiupenglin.dribbble_app.dribbble.auth.AuthActivity"
            android:windowSoftInputMode="adjustPan"/>

    </application>

</manifest>